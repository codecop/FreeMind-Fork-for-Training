<?xml version="1.0"?>
<plugin label="accessories/plugins/NodeAttributeTable">
	<plugin_registration class_name="accessories.plugins.NodeAttributeTableRegistration" isPluginBase="true">
		<plugin_mode class_name="freemind.modes.mindmapmode"/>
	</plugin_registration>
	<plugin_action documentation="%accessories/plugins/NodeAttributeTable_jumpto.properties_documentation" 
		name="%accessories/plugins/NodeAttributeTable_jumpto.properties_name" 
		key_stroke="%keystroke_accessories/plugins/NodeAttributeTable_jumpto.keystroke" 
		base="freemind.extensions.NodeHookAdapter" 
		label="accessories/plugins/NodeAttributeTable_jumpto.properties" 
		class_name="accessories.plugins.NodeAttributeTable" 
		instanciation="Other">
        <plugin_mode class_name="freemind.modes.mindmapmode"/>
        <plugin_menu location="menu_bar/navigate/AttributeTables/AttributeTable_jumpto"/>
        <plugin_property name="command" value="jump"/>  
    </plugin_action>
	<plugin_action documentation="%accessories/plugins/NodeAttributeTable_hide_show.properties_documentation" 
		name="%accessories/plugins/NodeAttributeTable_hide_show.properties_name" 
		key_stroke="%keystroke_edit_attributes" 
		base="freemind.extensions.NodeHookAdapter" 
		label="accessories/plugins/NodeAttributeTable_hide_show.properties" 
		class_name="accessories.plugins.NodeAttributeTable" 
		instanciation="Other"
		isSelectable="true">
        <plugin_mode class_name="freemind.modes.mindmapmode"/>
        <plugin_menu location="menu_bar/view/AttributeTable_window/AttributeTable_hide_show"/>
        <plugin_menu location="popup/popup/AttributeTable_hide_show"/>
        <plugin_property name="command" value="hide_show"/> 
    </plugin_action> 

</plugin>
